    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LocationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocationDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>
